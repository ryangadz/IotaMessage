doctype html
html
  head
    title= title
    link(rel='stylesheet', href='/stylesheets/main.css')
  body
    block content
    .main.container
      .row
        .col-md-6.col-md-offset-3
          h1.display-4.m-b-2 Log In
          form(method='POST' action='/login')
            div.form-group
              label(for='email') MyName
              input.form-control(type='text' id='email' placeholder='email' name='email')
            div.form-group
              label(for='password') Message
              input.form-control(type='password' id='password' placeholder='password' name='password')
            button.btn.btn-primary(type='submit') Attach 